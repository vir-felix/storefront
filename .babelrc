{
  "presets": [
    ["next/babel", {
      "preset-env": {
        "modules": "commonjs",
        "targets": {
          "node": "current",
          "browsers": [
            "last 2 versions"
          ]
        }
      }
    }]
  ],
  "env": {
    "development": {
      "plugins": [
        ["module-resolver", {"root": ["./src"]}],
        "transform-decorators-legacy",
        "transform-class-properties"
      ]
    },
    "production": {
      "plugins": [
        ["module-resolver", {"root": ["./src"]}],
        ["@babel/plugin-proposal-decorators", { "legacy": true }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ]
    },
    "jesttest": {
      "plugins": [
        ["module-resolver", {"root": ["./src"]}],
        ["@babel/plugin-proposal-decorators", { "legacy": true }],
        ["@babel/plugin-proposal-class-properties", { "loose": true }]
      ]
    }
  }
}
